{
  "python.analysis.typeCheckingMode": "basic",
  "cSpell.enableFiletypes": ["bat", "django-html"],
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "driver": "SQLite",
      "database": "${workspaceFolder:Facauldade_2023}/produtos.db",
      "name": "test"
    }
  ],
  "sqltools.useNodeRuntime": true,
